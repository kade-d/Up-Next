<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.util.ArrayList?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bsu.edu.cs222.GauntletLevelPickerController">
    <GridPane prefHeight="95.0" prefWidth="125.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Button fx:id="level1" prefHeight="35.0" prefWidth="100.0" text="1"/>
            <Button fx:id="level2" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="2"
                    GridPane.columnIndex="1"/>
            <Button fx:id="level3" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="3"
                    GridPane.rowIndex="1"/>
            <Button fx:id="level4" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="4"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button fx:id="level5" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="5"
                    GridPane.rowIndex="2"/>
            <Button fx:id="level6" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="6"
                    GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </children>
    </GridPane>

    <fx:define>
        <ArrayList fx:id="levelButtons">
            <fx:reference source="level1"/>
            <fx:reference source="level2"/>
            <fx:reference source="level3"/>
            <fx:reference source="level4"/>
            <fx:reference source="level5"/>
            <fx:reference source="level6"/>
        </ArrayList>
    </fx:define>
</AnchorPane>
