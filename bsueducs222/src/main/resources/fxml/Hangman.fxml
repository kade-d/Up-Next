                <font>
                    <Font size="11.0" />
                </font>
            </Button>
            <Button layoutX="105.0" layoutY="247.0" onAction="#handleButtonClick" prefWidth="27.0" text="X" fx:id="xBut" />
            <Button fx:id="yBut" layoutX="219.0" layoutY="185.0" onAction="#handleButtonClick" prefWidth="27.0" text="Y" />
