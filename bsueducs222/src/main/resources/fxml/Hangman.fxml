<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane layoutX="0" layoutY="0" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bsu.edu.cs222.HangmanController">
    <top>
        <HBox prefHeight="100.0" prefWidth="500.00" style="-fx-background-color: #ff4e30;">
            <children>
                <Button fx:id="startGame" layoutX="81.0" layoutY="14.0" mnemonicParsing="false" onAction="#startGame" text="Start Game" />
                <MenuButton text="Accessibility">
                    <Button fx:id="Rules" layoutX="165.0" layoutY="14.0" mnemonicParsing="false" onAction="#OpenRulesPage" text="Rules" />

                    <Button fx:id="Difficulty" layoutX="14.0" layoutY="14.0" onAction="#OpenDifficultyMenu" text="Difficulty">
                        <fx:define>
                            <ToggleGroup fx:id="toggleGroup" />
                        </fx:define>
                        <RadioButton layoutX="20.0" layoutY="19.0" text="Easy" toggleGroup="$toggleGroup" />
                        <RadioButton layoutX="12.0" layoutY="14.0" text="Medium" toggleGroup="$toggleGroup" />
                        <RadioButton layoutX="16.0" layoutY="87.0" text="Hard" toggleGroup="$toggleGroup" />
                    </Button>
                </MenuButton>
            </children>

        </HBox>
    </top>
    <left>
        <Button fx:id="Hint" onAction="#showHints" onKeyPressed="#SpaceBar" text="Hint">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <effect>
            <Glow />
         </effect></Button>
    </left>
    <center>
        <VBox style="-fx-background-color: #ffff00;">
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="105.0" layoutY="39.0" pickOnBounds="true" preserveRatio="true" />
        </VBox>
    </center>
    <right>
        <Button fx:id="Music" mnemonicParsing="false" onAction="#ToggleMusic" text="Sound" />
    </right>
    <bottom>
        <HBox fx:id="Buttonlayout" layoutX="Infinity" prefHeight="200.0" prefWidth="500.0">
